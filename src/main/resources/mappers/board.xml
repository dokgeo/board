<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
<!-- 게시판 목록 -->
<select id="selectBoardInfo"  resultType="com.web.board.VO.boardVO">
		
		SELECT 
		 board_id
		,board_title
		,board_date
		,board_reg_user
		from board
	</select>
	
<!-- 게시판 등록	 -->
<insert id="insertBoardInfo" parameterType="com.web.board.VO.boardVO">

		INSERT into board(board_title
			,board_reg_user
			,board_content)
		values ( #{board_title}
		,#{board_reg_user}
		,#{board_content}
		)
</insert>

<!-- 게시판 수정 -->
<update id="updateBoardInfo" parameterType="com.web.board.VO.boardVO">

update board set
	 board_title = #{board_title}
	,board_content = #{board_cotent}
	where 
	board_id = #{board_id}
</update>

<!-- 게시판 삭제 -->
<delete id="deleteBoardInfo" parameterType="com.web.board.VO.boardVO">
	
		DELETE
		FROM board
		WHERE board_id = #{board_id}
	
	</delete>



</mapper>